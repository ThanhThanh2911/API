
@{
    ViewData["Title"] = "Index";
}

<div>
    <a href="javascripts:void(0);"
       class="btn btn-outline-success"
       onclick="category.openAddEditModal()"><i class="fas fa-plus-circle"></i></a>
</div>

<div class="row" style="width:100%">
    <div class="col-12">
        <table class="table table-bordered table-hover table-striped" style="width:100%;" id="tbCategory">
        </table>
    </div>
</div>

<!-- The Modal -->
<div class="modal" id="addEditCategory">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="frmAddEditCategory">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Create Category</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input class="form-control" hidden id="ID" name="ID" />
                    <div class="row form-group">
                        <div class="col-3 col-md-4">
                            <label class="float-right">Category Name</label>
                        </div>
                        <div class="col-9 col-md-8">
                            <input type="text" class="form-control" id="CategoryName" name="CategoryName" />
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="javascripts:void(0);"
                       class="btn btn-outline-info"
                       onclick="category.save()">Save</a>
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Exit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section css{
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
}


@section Scripts{
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/js/Category/category.js"></script>
}

